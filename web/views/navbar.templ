templ Navbar() {
	<nav class="flex w-screen justify-between bg-gradient-to-b from-purple-900 to-purple-800 text-white text-xl p-6 items-center">
		@Logo()	
		<div class="flex gap-6">
			<a href="#">Home</a>
			<a href="#instructions">Instructions</a>
		</div>
	</nav>
}